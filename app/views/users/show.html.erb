<div class="page-header">
  <% if admin? || @user.id == current_user.id %>
  <div class= "pull-right">
    <%= link_to 'Edit User', edit_user_path, class: "btn btn-info btn-primary" %>
  </div>
  <% end %>
  <h1><%= ("#{@user.first_name} #{@user.last_name}") %></h1>
</div>

<dl class="dl-horizontal">
  <dt>First name</dt>
  <dd><%= @user.first_name %></dd>
</dl>

<dl class="dl-horizontal">
  <dt>Last name</dt>
  <dd><%= @user.last_name %></dd>
</dl>
<% if admin? || @user.id == current_user.id %>
<dl class="dl-horizontal">
  <dt>Email name</dt>
  <dd><%= mail_to (@user.email) %></dd>
</dl>
<% end %>

<dl class="dl-horizontal">
  <dt>Pivotal Tracker Token</dt>
  <dd><%= @user.tracker_token %></dd>
</dl>

<% if admin? %>
<dl class="dl-horizontal">
  <dt>Admin?</dt>
  <dd><%= @user.admin %></dd>
</dl>

<% end %>
