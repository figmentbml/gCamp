<div class="form-horizontal">
  <%= form_for(@task) do |f| %>
    <% if @task.errors.any? %>
      <div class="form-group">
      <div class="col-sm-offset-1 col-sm-6 alert alert-danger" role="alert">
        <h3><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h3>
        <ul>
          <% @task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <% end %>

    <div class="form-group">
      <%= f.label :description, class: "col-sm-1 control-label" %>
      <div class="col-sm-4">
        <%= f.text_field :description, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :due_date, class: "col-sm-1 control-label" %>
      <div class="col-sm-1">
        <div class="input-group">
          <%= f.date_field :due_date, class: "form-control" %>
          <span class="input-group-addon glyphicon glyphicon-calendar"></span>
        </div>
      </div>
    </div>

    <% unless current_page?(new_task_path) %>
      <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
          <div class="checkbox">
            <label><%= f.check_box :complete %>Complete</label>
          </div>
        </div>
      </div>
    <% end %>

    <div class="form-group">
      <div class="col-sm-offset-1 col-sm-10">
        <br/>
        <%= f.submit name: button_name, class: "btn btn-primary"%>
      </div>
    </div>

  <% end %>
</div>
