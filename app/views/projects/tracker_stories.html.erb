<%= page_header "Stories for #{@tracker_project[:name]}" do %>
<p>(showing first 500)</p>
<% end %>

<table class="table table-striped table-bordered">
  <thead>
    <tr class= "active">
      <th>Story</th>
      <th>
        Estimate
      </th>
      <th>
        Labels
      </th>
      <th>
        Current State
      </th>
    </tr>
  </thead>
  <tbody>
    <% @tracker_stories.each do |story| %>
    <tr>
      <td><%= link_to story[:name], 'http://www.pivotaltracker.com'  %> </td>
      <td>
        <%= story[:estimate] %>
      </td>
      <td>
        <% @labels = [] %>
        <% story[:labels].each do |label| %>
        <% @labels << label[:name] %>
        <% end %>
        <%= @labels.join(", ") %>
      </td>
      <td>
        <%= story[:current_state] %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
