<div class="page-header">
  <div class= "pull-right">
    <%= link_to_if((@ref == "incomplete"), "All", project_tasks_path(type: "all")) %>  |
    <%= link_to_if((@ref == "all"), "Incomplete", project_tasks_path(type: "incomplete")) %>
    <%= link_to 'Create Task', new_project_task_path, class: "btn btn-info btn-primary" %>
  </div>
  <h1>Tasks for <%= @project.name %></h1>
</div>
<ol class="breadcrumb">
  <li><%= link_to "Projects", projects_path %></li>
  <li><%= link_to @project.name, project_path(@project) %></li>
  <li class="active">Tasks</li>
</ol>
<table class="table">
    <thead>
      <tr>
        <th>Description</th>
        <th>Complete</th>
        <th>Due</th>
      </tr>
    </thead>
    <tbody>
      <div class="col-md-12">
        <div class="row">
          <% @tasks.each do |task| %>
            <% if task.due_date != nil %>
              <% if task.due_date >= Date.today && task.due_date <= Date.today+6 %>
              <tr class = "alert alert-danger" >
              <% else %>
              <tr>
            <% end %>
            <% end %>
              <td><%= link_to task.description, project_task_path(task.project, task) %></td>
              <td><%= task.complete %></td>
              <td>
                <% if task.due_date %>
                  <%= task.due_date.strftime("%m/%d/%Y") %>
                  <% else nil %>
                  <% end %>
                </td>
                <td>
                  <div class= "pull-right">
                  <%= link_to 'Edit', edit_project_task_path(task.project, task), class:"btn btn-info" %>
                  <%= link_to 'Destroy', project_task_path(task.project, task), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
                  </div>
              </td>
            </tr>
          <% end %>
        </div>
      </div>
    </tbody>
</table>

<br>
