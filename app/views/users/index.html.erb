<div class="page-header">
  <div class= "pull-right">
    <%= link_to 'Create User', new_user_path, class: "btn btn-info btn-primary" %>
  </div>
  <h1>Users</h1>
</div>
<table class="table">
  <thead>
    <tr>
      <th width="25%">Name</th>
      <th width="75%">Email</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= link_to ("#{user.first_name} #{user.last_name}"),
            user_path(user) %></td>
          <% if current_user.id == user.id || admin? %>
            <% #current_user.memberships.where(project_id: Project.all).pluck(:project_id) == user.memberships.where(project_id: Project.all).pluck(:project_id) %>
          <td><%= mail_to(user.email) %></td>
          <td>
            <%= link_to 'Edit', edit_user_path(user) %>
          </td>
          <% else %>
          <td></td>
          <td></td>
          <% end %>
        </tr>
        <% end %>
  </tbody>
</table>
