<div class="page-header">
  <h1>Tasks <%= link_to 'Create Task', new_task_path, class: "btn btn-info btn-primary pull-right" %>

</h1>
</div>
<table class="table">
    <thead>
      <tr>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <div class="col-md-3">
        <div class="row">
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
          <td>
            <div class= "pull-right">
            <%= link_to 'Show', task, class:"btn btn-success" %>
            <%= link_to 'Edit', edit_task_path(task), class:"btn btn-info" %>
            <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
            </div>
        </td>
      </tr>
    <% end %>
  </div>
</div>
  </tbody>
</table>

<br>
