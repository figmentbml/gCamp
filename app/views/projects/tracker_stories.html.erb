<div class="page-header">
  <div class= "pull-right">
    <p>(showing first 500)</p>
  </div>
  <h1>Stories for <%= @tracker_project[0][:name] %></h1>

</div>

<table class="table table-striped table-bordered">
  <thead>
    <tr class= "active">
      <th>Story</th>
      <th>
        Estimate
      </th>
      <th>
        Labels
      </th>
      <th>
        Current State
      </th>
    </tr>
  </thead>
  <tbody>
    <% @tracker_stories.each do |story| %>
    <tr>
      <td><%= story[:name]  %> </td>
      <td>
        <%= story[:estimate] %>
      </td>
      <td>
        <% @labels = [] %>
        <% story[:labels].each do |label| %>
        <% @labels << label[:name] %>
        <% end %>
        <%= @labels.join(", ") %>
      </td>
      <td>
        <%= story[:current_state] %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
