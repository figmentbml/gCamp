<strong><p class="alert-success text-center"><%= notice %></p></strong>

<div class="page-header">
  <div class= "pull-right">
    <%= link_to 'Create User', new_user_path, class: "btn btn-info btn-primary" %>
  </div>
  <h1>Users</h1>
</div>
<table class="table">
  <thead>
    <tr>
      <th width="25%">Name</th>
      <th width="75%">Email</th>
    </tr>
  </thead>
  <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= link_to ([user.first_name.capitalize + ' ' + user.last_name.capitalize].join),
            user_path(user) %></td>
          <td><%= mail_to(user.email) %></td>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
        </tr>
        <% end %>
  </tbody>
</table>
