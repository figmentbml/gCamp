<div class="page-header">
  <h1>Tasks
  <%= link_to 'Create Task', new_task_path, class: "btn btn-info btn-primary pull-right" %>
</h1>
</div>
<table class="table">
    <thead>
      <tr>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><button type="button" class="btn btn-danger pull-right"><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></button>
        <button type="button" class="btn btn-info pull-right"><%= link_to 'Edit', edit_task_path(task) %></button>
        <button type="button" class="btn btn-success pull-right"><%= link_to 'Show', task %></button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
