<div class="page-header">
  <div class= "pull-right">
    <%= link_to 'Edit User', edit_user_path, class: "btn btn-info btn-primary" %>
  </div>
  <h1><%= @user.first_name.capitalize %> <%= @user.last_name.capitalize %></h1>
</div>

<dl class="dl-horizontal">
  <dt>First name</dt>
  <dd><%= @user.first_name.capitalize %></dd>
</dl>

<dl class="dl-horizontal">
  <dt>Last name</dt>
  <dd><%= @user.last_name.capitalize %></dd>
</dl>

<dl class="dl-horizontal">
  <dt>Email name</dt>
  <dd><%= mail_to (@user.email) %></dd>
</dl>
